<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/adminbgnew">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relaone"
        android:padding="30dp">

        <TextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amarante"
            android:text="Hello,"
            android:textColor="#fff"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hello"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/amarante"
            android:text="ADMIN HOME"
            android:textColor="#fff"
            android:textSize="35dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_pro"
            android:theme="@style/AppTheme" />



    </RelativeLayout>

    <Button
        android:id="@+id/admin_product_stock"
        android:layout_width="137dp"
        android:layout_height="150dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="150dp"
        android:background="@drawable/addstockimg"
        android:backgroundTint="@color/colorBackground"
        android:theme="@style/AppTheme"
        tools:visibility="visible" />

    <TextView
        android:layout_width="152dp"
        android:layout_height="32dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/amarante"
        android:text="ADD STOCK"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/admin_product_add"
        android:layout_width="145dp"
        android:layout_height="150dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="150dp"
        android:background="@drawable/addprodnewimg"
        android:theme="@style/AppTheme" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="200dp"
        android:fontFamily="@font/amarante"
        android:text="ADD PRODUCTS"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/admin_signout"
        android:layout_width="120dp"
        android:layout_height="136dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="150dp"
        android:background="@drawable/newsignout"
        android:theme="@style/AppTheme" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/amarante"
        android:text="SIGNOUT"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />



</LinearLayout>